# Cortexha Healthcare Application - Environment Variables Template
# Copy this file to .env.local and fill in your actual values

# ===================================
# DEMO MODE CONFIGURATION
# ===================================
# Set to 'true' to enable demo mode with anonymized data
# Demo mode is safe for public demonstrations and does not access real patient data
VITE_DEMO_MODE=false

# ===================================
# AZURE STORAGE CONFIGURATION
# ===================================
# Azure Storage Account Name
VITE_AZURE_STORAGE_ACCOUNT_NAME=your_storage_account_name

# Azure Storage Account Key (keep this secret!)
VITE_AZURE_STORAGE_ACCOUNT_KEY=your_storage_account_key

# Azure Storage SAS Token (alternative to account key)
VITE_AZURE_STORAGE_SAS_TOKEN=your_sas_token

# Container name for patient documents
VITE_AZURE_STORAGE_CONTAINER_NAME=patient-documents

# ===================================
# AZURE TABLE STORAGE SAS TOKENS
# ===================================
# SAS Token for Patients table
VITE_PATIENTS_SAS_TOKEN=your_patients_sas_token

# SAS Token for Documents table
VITE_DOCUMENTS_SAS_TOKEN=your_documents_sas_token

# SAS Token for AISummaries table
VITE_SUMMARIES_SAS_TOKEN=your_summaries_sas_token

# SAS Token for Prescriptions table
VITE_PRESCRIPTIONS_SAS_TOKEN=your_prescriptions_sas_token

# ===================================
# AZURE OPENAI CONFIGURATION
# ===================================
# Azure OpenAI Endpoint
VITE_AZURE_OPENAI_ENDPOINT=https://your-openai-resource.openai.azure.com

# Azure OpenAI API Key (keep this secret!)
VITE_AZURE_OPENAI_API_KEY=your_openai_api_key

# Azure OpenAI Deployment Name
VITE_AZURE_OPENAI_DEPLOYMENT=gpt-4

# Azure OpenAI API Version
VITE_AZURE_OPENAI_API_VERSION=2024-02-15-preview

# ===================================
# AZURE AD B2C AUTHENTICATION
# ===================================
# Azure AD B2C Client ID
VITE_AZURE_CLIENT_ID=your_client_id

# Azure AD B2C Tenant Name
VITE_AZURE_TENANT_NAME=your_tenant_name

# Azure AD B2C Policy Name (optional)
VITE_AZURE_POLICY_NAME=

# ===================================
# API CONFIGURATION
# ===================================
# API Base URL (leave empty for integrated Static Web App API)
VITE_API_BASE_URL=

# Environment (development, staging, production)
VITE_ENVIRONMENT=development

# ===================================
# DEMO MODE LOGIN CREDENTIALS
# ===================================
# These credentials are publicly available for demo purposes
# Demo Login Email: demo@cortexha.com
# Demo Login Password: demo123
# 
# Note: Demo mode uses completely anonymized data and does not
# access any real patient information or Azure storage resources.
